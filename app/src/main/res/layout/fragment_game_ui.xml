<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ukjamez.locationbasedgame.GameUI">


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/buttonP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="66dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:src="@mipmap/ic_airplanemode_active_white_18dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/buttonD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@mipmap/ic_flash_on_white_18dp" />


    <ImageView
        android:id="@+id/bgImage1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_marginRight="320dp"
        android:layout_marginTop="2dp"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/alltiers" />

    <TextView
        android:id="@+id/textT2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_marginRight="330dp"
        android:layout_marginTop="22dp"
        android:text="0" />

    <TextView
        android:id="@+id/textT3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_marginRight="330dp"
        android:layout_marginTop="41dp"
        android:text="0" />

    <TextView
        android:id="@+id/textP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="54dp"
        android:padding="12dp"
        android:text="N/A" />

    <ProgressBar
        android:id="@+id/progressBoth"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_marginTop="3dp"
        android:max="500" />

    <ProgressBar
        android:id="@+id/progressWalk"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_marginTop="22dp"
        android:max="500"
        android:progress="300"/>

    <ProgressBar
        android:id="@+id/progressRun"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_marginTop="41dp"
        android:max="2500" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_marginEnd="295dp"
        android:layout_marginTop="3dp"
        android:text="âˆž" />

    <TextView
        android:id="@+id/textWalk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_marginEnd="295dp"
        android:layout_marginTop="22dp"
        android:text="0" />


    <TextView
        android:id="@+id/textRun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_marginRight="295dp"
        android:layout_marginTop="41dp"
        android:text="0" />

    <TextView
        android:id="@+id/textT1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_marginRight="330dp"
        android:layout_marginTop="3dp"
        android:text="0" />


</FrameLayout>
